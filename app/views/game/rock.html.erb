
<!DOCTYPE html>
<html>
<body>

  <div class="container">
    <hr>
    <div class="row">

      <div class="col-md-8 col-md-offset-2 col-xs-12">

        <div class="btn-group btn-group-justified">
          <a href="http://localhost:3000/play/rock" class="btn btn-block btn-primary">Play Rock</a>

          <a href="http://localhost:3000/play/paper" class="btn btn-block btn-info">Play Paper</a>

          <a href="http://localhost:3000/play/scissors" class="btn btn-block btn-primary">Play Scissors</a>
        </div>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="col-md-4 col-md-offset-2 col-xs-6">
        <div class="panel panel-success">

          <div class="panel-heading">
            <h2 class="panel-title text-center">Rock</h2>
          </div>

          <div class="panel-body">
            <img class="img-responsive" src="http://localhost:3000/assets/images/rock.png">
          </div>

        </div>
      </div>

      <div class="col-md-4">
        <div class="panel panel-danger">

          <% if @computer_move == "rock" %>
          <div class="panel-heading text-center">
            <h3 class="panel-title">Rock</h3>
          </div>
          <img class="image img-responsive" src="/assets/images/rock.png"/>

          <% elsif @computer_move == "paper" %>
          <div class="panel-heading text-center">
            <h3 class="panel-title">Paper</h3>
          </div>
          <img class="image img-responsive" src="/assets/images/paper.png"/>

          <% else %>
          <div class="panel-heading text-center">
            <h3 class="panel-title">Scissors</h3>
          </div>
          <img class="image img-responsive" src="/assets/images/scissors.png"/>
          <% end %>

        </div>
      </div>

    </div><!-- closing row -->

    <div class="row">
      <div class="col-md-12">

      <div class="well text-center">

        <% if @result == "tied" %>
        <h1>
          <span class="label label-warning"> You tied!</span> </h1>
          <% elsif @result == "won" %>
          <h1>
            <span class="label label-success">You won!</span>
          </h1>
          <% else %>
          <h1>
            <span class="label label-danger">You lost!</span>
          </h1>
          <% end %>

        </div>
      </div>
    </div>

  </div><!--container closing -->
</body>
</html>
