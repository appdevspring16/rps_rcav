
<div class="row">
 <div class="col-md-4 col-md-offset-2 col-xs-6">
   <div class="panel panel-success">
     <div class="panel-heading">
       <h2 class="panel-title text-center">
         <%= @user_input.capitalize %>
       </h2>
     </div>
     <div class="panel-body">
       <img class="img-responsive" src="/assets/images/scissors.png">
     </div>
   </div>
 </div>

 <div class="col-md-4 col-xs-6">
   <div class="panel panel-danger">
     <div class="panel-heading">
       <h2 class="panel-title text-center">
        <%= @computer_input.capitalize %>
       </h2>
     </div>
     <div class="panel-body">
       <img class="img-responsive" src="/assets/images/rock.png">
     </div>
   </div>
 </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="well text-center">
      <h1>
        <% if @result == "lose" %>

          <span class="label label-danger">You lost!</span>

        <% elsif @result == "tied" %>

          <span class="label label-warning">You tied!</span>

        <% elsif @result = "win" %>

            <span class="label label-success">You won!</span>

        <% end %>

      </h1>
    </div>
  </div>
</div>
