<div class="container">

  <hr>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
      <div class="btn-group btn-group-justified">
        <a href="/rock" class="btn btn-block btn-primary">
          Play Rock
        </a>

        <a href="/paper" class="btn btn-block btn-info">
          Play Paper
        </a>

        <a href="/scissors" class="btn btn-block btn-primary">
          Play Scissors
        </a>
      </div>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-xs-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            You played <%= @player_move %>!
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/<%= @player_move %>.png">
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            The computer played <%= @computer_move %>!
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/<%= @computer_move %>.png">
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="well text-center">
        <h1>
          <span class="label label-<%= @game_status_styling %>">
            You <%= @game_status %>!
          </span>
        </h1>
      </div>
    </div>
  </div>

</div>
