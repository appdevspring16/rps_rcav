<div class="container">
  <hr>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">
      <div class="btn-group btn-group-justified">
        <a href="/rock" class="btn btn-primary btn-block">
          Play Rock
        </a>
        <a href="/paper" class="btn btn-info btn-block">
          Play Paper
        </a>
        <a href="/scissors" class="btn btn-primary btn-block">
          Play Scissors
        </a>
      </div>
    </div>
  </div>
  <hr>
  <!-- User Move -->
  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-xs-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Scissors</h3>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/scissors.png">
        </div>
      </div>
    </div>

    <!-- Computer Move -->
    <% if @computer_move=="rock" %>
    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            Rock
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/rock.png">
        </div>
      </div>
    </div>

    <% elsif @computer_move=="paper" %>
    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            Paper
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/paper.png">
        </div>
      </div>
    </div>
    <% elsif @computer_move=="scissors" %>
    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            Scissors
          </h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/scissors.png">
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <% if @result=="Tie" %>
    <div class="col-md-12">
      <div class="well text-center">
        <h1>
          <span class="label label-warning">
            You tied!
          </span>
        </h1>
      </div>
    </div>
    <% elsif @result=="Win" %>
    <div class="col-md-12">
      <div class="well text-center">
        <h1>
          <span class="label label-success">
            You won!
          </span>
        </h1>
      </div>
    </div>
    <% else %>
    <div class="col-md-12">
      <div class="well text-center">
        <h1>
          <span class="label label-danger">
            You lost!
          </span>
        </h1>
      </div>
    </div>
    <% end %>
  </div>
</div>
