<h1>Rock Paper Scissors Forever!</h1>

<p>
  You played paper.
</p>

<p>
  The computer played <%= @computer_move %>. <%= @result %>.
</p>

<p>
  <% @result %>
</p>


<div class="container">
  <hr>
  <div class="row">

    <div class="col-md-8 col-md-offset-2 col-xs-12">

      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <a href="/rock" class="btn btn-block btn-primary" role="button">Play Rock</a>
        <a href="/paper" class="btn btn-block btn-info" role="button">Play Paper</a>
        <a href="/scissors" class="btn btn-block btn-primary" role="button">Play Scissors</a>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-med-4 col-xs-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title text-center">Paper</h2>
          </div>
          <div class="panel-body">
            <img class="img-responsive" src="assets/images/paper.png" alt="" />
          </div>
        </div>
      </div>
      <div class="col-md-4 col-xs-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              <%=@computer_move %>
            </h2>
          </div>
          <div class="panel-body">
            <% if @computer_move = "rock" %>
<%= image_tag("assets/images/rock", class:"img-responsive")  %>
          <%# img class="img-responsive"src="assets/images/rock.png" alt="" %>
            <% elsif @computer_move = "paper" %>
            <% img_tag("assets/images/paper", class:"img-responsive") %>
            <% else %>
            <% img_tag("assets/images/scissors", class:"img-responsive") %>
<%end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="well text-center">
          <h1>
            <span class="label label-warning"> <%=@result %>
            </span>
          </h1>
        </div>
      </div>
    </div>
  </div>
