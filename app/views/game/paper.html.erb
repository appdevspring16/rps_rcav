<% if @result=="Tie" %>

<div>
  <div class="col-sm-6 panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title text-center">
      Your Move: Paper
    </h2>
  </div>
    <div class="panel-body"><div class="row padding-inside-top-md padding-inside-bottom-md">
      <div class="col-sm-6">
        <img src="assets/images/paper.png" alt="" />
      </div>
    </div>
  </div>
</div>

<div class="col-sm-6 panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title text-center">
    My Move: Paper
  </h2>
</div>
  <div class="panel-body"><div class="row padding-inside-top-md padding-inside-bottom-md">
    <div class="col-sm-6">
      <img src="assets/images/paper.png" alt="" />
    </div>
  </div>
</div>
</div>
</div>

<div class="row col-sm-offset-1 col-sm-10 status-output padding-inside-top-md padding-inside-bottom-md badge">
  <button type="button" class="btn btn-default result-tie">Ah, we tied.</button>
</div>

<% elsif @result=="Win" %>

<div>
  <div class="col-sm-6 panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title text-center">
      Your Move: Paper
    </h2>
  </div>
    <div class="panel-body"><div class="row padding-inside-top-md padding-inside-bottom-md">
      <div class="col-sm-6">
        <img src="assets/images/paper.png" alt="" />
      </div>
    </div>
  </div>
</div>

<div class="col-sm-6 panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title text-center">
    My Move: Rock
  </h2>
</div>
  <div class="panel-body"><div class="row padding-inside-top-md padding-inside-bottom-md">
    <div class="col-sm-6">
      <img src="assets/images/Rock.png" alt="" />
    </div>
  </div>
</div>
</div>
</div>
<div class="row col-sm-offset-1 col-sm-10 status-output padding-inside-top-md padding-inside-bottom-md badge">
  <button type="button" class="btn btn-default result-win">Congrats, you won.</button>
</div>


<% else %>

<div>
  <div class="col-sm-6 panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title text-center">
      Your Move: Paper
    </h2>
  </div>
    <div class="panel-body"><div class="row padding-inside-top-md padding-inside-bottom-md">
