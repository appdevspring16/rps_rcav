<!-- The equal sign "=" means output in the browser (see above); without the "=" it will not be added to the url (see below) -->

<% if @result=="Tie" %>

<div class="row padding-inside-top-md padding-inside-bottom-md">
  <div class="col-sm-3">
    <img src="assets/images/paper.png" alt="" />
  </div>
  <div class="col-sm-offset-3 col-sm-3">
    <img src="assets/images/rock.png" alt="" />
  </div>
</div>
</div>
<div class="row col-sm-offset-1 col-sm-10 status-output padding-inside-top-md padding-inside-bottom-md badge">
  <button type="button" class="btn btn-default result-win">Congrats, you won.</button>
</div>

<% elsif @result=="Win" %>

<div class="row padding-inside-top-md padding-inside-bottom-md">
  <div class="col-sm-3">
    <img src="assets/images/paper.png" alt="" />
  </div>
  <div class="col-sm-offset-3 col-sm-3">
    <img src="assets/images/scissors.png" alt="" />
  </div>
</div>
</div>
<div class="row col-sm-offset-1 col-sm-10 status-output padding-inside-top-md padding-inside-bottom-md badge">
  <button type="button" class="btn btn-default result-lose">Sorry, you lost.</button>
</div>


<% else %>

<div class="row padding-inside-top-md padding-inside-bottom-md">
  <div class="col-sm-3">
    <img src="assets/images/paper.png" alt="" />
  </div>
  <div class="col-sm-offset-3 col-sm-3">
    <img src="assets/images/paper.png" alt="" />
  </div>
</div>
</div>

<div class="row col-sm-offset-1 col-sm-10 status-output padding-inside-top-md padding-inside-bottom-md badge">
  <button type="button" class="btn btn-default result-tie">Ah, we tied.</button>
</div>



<% end%>
