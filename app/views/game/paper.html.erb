<html>
<head>
  <title>Rock, Paper, Scissors</title>
<meta charset="utf-8">

<!-- Connect to Bootstrap CSS -->
<link rel="stylesheet" href="/assets/css/bootstrap.css">

<!-- Connect to Font Awesome CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<!-- Connect to our own additional CSS -->
<link rel="stylesheet" href="assets/additional_styles.css">

<!-- Connect to jQuery (required before Bootstrap Javascript) -->
<script src="assets/jquery-2.2.2.min.js"></script>

<!-- Connect to Bootstrap Javascript -->
<script src="assets/bootstrap/js/bootstrap.js"></script>

<!-- These meta tags make Bootstrap responsive and more accessible -->
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Connect to Google Web Fonts -->
<link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
</head>


<body>

<!-- Player choice (HREF links are broken, need to fix) -->
  <div class="container">
    <hr>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-12">
        <div class="btn-group btn-group-justified">
          <a href="/rock" class="btn btn-block btn-primary">Play Rock</a>
          <a href="/paper" class="btn btn-block btn-info">Play Paper</a>
          <a href="/scissors" class="btn btn-block btn-primary">Play Scissors</a>
        </div>
      </div>
    </div>
    <hr>

<!-- Game result images -->
    <hr>
      <div class="row">
    <div class="col-md-4 col-md-offset-2 col-xs-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title text-center">Paper</h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/paper.png">
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center"><%=@computer_move%></h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/<%=@computer_move%>.png">
        </div>
      </div>
    </div>
  </div>
<!-- Game result statement -->

<div class="row">
  <div class="col-md-12">
    <div class="well text-center">
      <%if @result == "You won!"%>
      <h1><span class="label label-success"><%=@result%></span></h1>
      <% elsif @result =="You tied!"%>
      <h1><span class="label label-warning"><%=@result%></span></h1>
      <% elsif @result =="You lost!"%>
      <h1><span class="label label-danger"><%=@result%></span></h1>
      <%end%>
    </div>
  </div>
</div>
</div>
</body>
</html>
