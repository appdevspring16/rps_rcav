<div class="row">
  <div class="col-md-offset-2 col-md-4 col-xs-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          Paper</h2>
        </div>
        <div class="panel-body">
          <img class="img-responsive" src="/assets/images/paper.png" alt="" />
        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            <%= @computer_move.capitalize %></h2>
          </div>
          <div class="panel-body">
            <% if @computer_move == "paper" %>
            <img class="img-responsive" src="/assets/images/paper.png" alt="" />
            <% elsif @computer_move == "scissors" %>
            <img class="img-responsive" src="/assets/images/scissors.png" alt="" />
            <% else %>
            <img class="img-responsive" src="/assets/images/rock.png" alt="" />
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well text-center">
          <h1>
            <% if @result == "You won!" %>
            <span class="label label-success">
              <% elsif @result == "You lost!" %>
              <span class="label label-danger">
                <% else %>
                <span class="label label-warning">
                  <% end %>

                  <%= @result %>
                </span>
              </h1>
            </div>
          </div>
        </div>
