<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>

  <!-- Connect to Bootstrap CSS -->
  <link rel="stylesheet" href="/assets/css/bootstrap.css">

  <!-- Connect to our own additional CSS -->
  <link rel="stylesheet" href="/app/assets/stylesheets/additional_styles.css">

</head>
<body>

  <div class="container">

    <div class="row"> <!-- Page borders -->
      <div class="col-md-offset-2 col-md-8">

        <div class="row"> <!-- Play buttons -->
          <div class="col-md-offset-3 col-md-6">

            <div class="btn-group btn-group-justified">
              <div class="btn-group">
                <a href="/play/rock" type="button" class="btn btn-primary">Play Rock</a>
              </div>
              <div class="btn-group">
                <a href="/play/paper" type="button" class="btn btn-info">Play Paper</a>
              </div>
              <div class="btn-group">
                <a href="/play/scissors" type="button" class="btn btn-primary">Play Scissors</a>
              </div>
            </div>

          </div>
        </div>

        <div class="row"> <!-- Picture row -->
          <div class="col-md-offset-3 col-md-3">  <!-- Player choice -->
            <div class="panel panel-success">
              <div class="panel-heading">
                <h3 class="panel-title">Paper</h3>
              </div>
              <div class="panel-body">
                <img class="img-responsive" src="/assets/images/paper.png" />
              </div>
            </div>
          </div>
          <div class="col-md-3"> <!-- Computer choice -->
            <div class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title"><%= @computer_move.capitalize %></h3>
              </div>
              <div class="panel-body">
                <img class="img-responsive" src="/assets/images/<%= @computer_move %>.png" />
              </div>
            </div>

          </div>
        </div>

        <div class="row"> <!-- Result row -->
          <div class="col-md-offset-2 col-md-8">
            <div class="well text-center">
              <span class="label label-warning">
                <%= @result %>
              </span>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div>

  </body>
  </html>
