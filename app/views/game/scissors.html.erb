<body>

  <div class="container">
    <hr>
    <div class="row links">
      <div class="col-sm-offset-2 col-sm-8">
        <div class="btn-group btn-group-justified">
          <a href="/rock" class="btn btn-block btn-primary">Play Rock</a>
          <a href="/paper" class="btn btn-block btn-info">Play Paper</a>
          <a href="/scissors" class="btn btn-block btn-primary">Play Scissors</a>
        </div>
      </div>

    </div>
    <hr>
    <div class="row images">
      <div class="col-md-offset-2 col-md-4">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title text-center">Scissors</h2>
          </div>
          <div class="panel-body">
              <img class="img-responsive" src="/assets/images/scissors.png" alt="" />
          </div>
        </div>
      </div>


      <div class="col-md-4">
        <div class="panel panel-danger">
          <div class="panel-heading">


            <h2 class="panel-title text-center">    <%=  @computer_move   %></h3>
            </div>
            <div class="panel-body">
              <% if @result=="tied"  %>
              <img class="img-responsive" src="/assets/images/scissors.png" alt="" />
              <%elsif @result=="won" %>
              <img class="img-responsive" src="/assets/images/paper.png" alt="" />
              <%else%>
              <img class="img-responsive" src="/assets/images/rock.png" alt="" />
              <%end%>

            </div>
          </div>
        </div>
      </div>

    <div class="row results">
      <div class="col-xs-12">
<div class="well text-center">
  <h1>
    <% if @result=="tied"  %>
    <span class="label label-warning">
        You tied!
    </span>
    <%elsif @result=="won" %>
    <span class="label label-success">
        You won!
    <%else%>
    <span class="label label-danger">
        You lost!
    <%end%>

  </h1>
</div>

      </div>
    </div>
  </div>

  </html>
  <%= yield %>

</body>
