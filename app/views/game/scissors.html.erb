<div class="container">

<hr>

<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-12">
    <div class="btn-group btn-group-justified">
      <a href="/rock" class="btn btn-block btn-primary">Play Rock
      </a>
      <a href="/paper" class="btn btn-primary btn-block">Play Paper
      </a>
      <a href="/scissors" class="btn btn-info btn-block">Play Scissors
      </a>
</div>
</div>
</div>

<hr>

<div class="row">
  <div class="col-md-4 col-md-offset-2">
<div class="panel panel-success">
  <div class="panel-heading text-center">
    <h3 class="panel-title">Scissors</h3>
  </div>
  <div class="panel-body">
    <img class="image img-responsive" src="/assets/images/scissors.png"/>
  </div>
</div>
</div>

<div class="col-md-4">
  <div class="panel panel-danger">

<% if @computer_move == "rock" %>
<div class="panel-heading text-center">
<h3 class="panel-title">Rock</h3>
</div>
<div class="panel-body">
<img class="image img-responsive" src="/assets/images/rock.png"/>
</div>
<% elsif @computer_move == "paper" %>
<div class="panel-heading text-center">
<h3 class="panel-title">Paper</h3>
</div>
<div class="panel-body">
<img class="image img-responsive" src="/assets/images/paper.png"/>
</div>
<% else %>
<div class="panel-heading text-center">
<h3 class="panel-title">Scissors</h3>
</div>
<div class="panel-body">
<img class="image img-responsive" src="/assets/images/scissors.png"/>
</div>
<% end %>
</div>
</div>
</div>

<div class="row">
  <div class="col-md-12">
<div class="well text-center">
<% if @result == "Tie"     %>
<h1><span class="label label-warning"> You tied!</span> </h1>
<% elsif @result == "Win"   %>
  <h1><span class="label label-success">You won!</span> </h1>
<% else %>
  <h1><span class="label label-danger">You lost!</span> </h1>
<% end %>
</div>
</div>
</div>


</div>
