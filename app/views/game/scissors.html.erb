<div class="container">
    <div class="row">
        <div class="col-sm-offset-3 col-sm-12">
          <h1>Rock, Paper, Scissors!
          </h1>

        </div>
        <div class="col-sm-offset-3 col-sm-12">
          <p>
             The computer played <%= @computer %> and you played <%= @player %>!
            </p>


        </div>
        <div class="col-sm-offset-3 col-sm-4">
          <img src="/assets/images/scissors.png" class="img-responsive" alt="Responsive image">

        </div>
    </div>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-12">
        <h3>
           You <%= @result %>!
         </h3>
      </div>
        <div class="col-sm-offset-2 col-sm-2">
<a class="btn btn-default" href="http://localhost:3000/scissors" role="button">Play Scissors!</a>
        </div>

        <div class="col-sm-2">
<a class="btn btn-default" href="http://localhost:3000/rock" role="button">Play Rock!</a>
        </div>

        <div class="col-sm-2">
<a class="btn btn-default" href="http://localhost:3000/paper" role="button">Play Paper!</a>
        </div>

    </div>
</div>
