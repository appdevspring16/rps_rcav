<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>

  <!-- Connect to Bootstrap CSS -->
  <link rel="stylesheet" href="/assets/css/bootstrap.css">

  <!-- Connect to our own additional CSS -->
  <link rel="stylesheet" href="/app/assets/stylesheets/additional_styles.css">

</head>
<body>

  <div class="container">

    <div class="row"> <!-- Page borders -->
      <div>

        <hr>
        <div class="row"> <!-- Play buttons -->
          <div class="col-md-offset-2 col-md-8">

            <div class="btn-group btn-group-justified">
              <div class="btn-group">
                <a href="/play/rock" type="button" class="btn btn-primary">Play Rock</a>
              </div>
              <div class="btn-group">
                <a href="/play/paper" type="button" class="btn btn-info">Play Paper</a>
              </div>
              <div class="btn-group">
                <a href="/play/scissors" type="button" class="btn btn-primary">Play Scissors</a>
              </div>
            </div>

          </div>
        </div>
        <hr>

        <div class="row"> <!-- Picture row -->
          <div class="col-md-offset-2 col-md-4">  <!-- Player choice -->
            <div class="panel panel-success">
              <div class="panel-heading">
                <h3 class="panel-title text-center">Scissors</h3>
              </div>
              <div class="panel-body">
                <img class="img-responsive" src="/assets/images/scissors.png" />
              </div>
            </div>
          </div>
          <div class="col-md-4"> <!-- Computer choice -->
            <div class="panel panel-danger">
              <div class="panel-heading">
                <h3 class="panel-title text-center"><%= @computer_move.capitalize %></h3>
              </div>
              <div class="panel-body">
                <img class="img-responsive" src="/assets/images/<%= @computer_move %>.png" />
              </div>
            </div>

          </div>
        </div>
      </div>

      <div class="row"> <!-- Result row -->
        <div class="col-md-12">
          <div class="well well-lg text-center">
            <h1><span class="label label-warning">
              <%= @result %>
            </span></h1>
          </div>
        </div>
      </div>

    </div>
  </div>
  <div>

  </body>
  </html>
