<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" media="all" href="/assets/application.css">
  <script src="/assets/application.js"></script>
  <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.css">
  <meta name="csrf-param" content="authenticity_token">
</head>

<body>
  <div class="container">
    <hr>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-12">
        <div class="btn-group btn-group-justified">
          <a href="/rock" class="btn btn-block btn-primary"> Play Rock </a>
          <a href="/paper" class="btn btn-block btn-info"> Play Paper </a>
          <a href="/scissors" class="btn btn-block btn-primary"> Play Scissors </a>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-4 col-md-offset-2 col-xs-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              Scissors
            </h2>
          </div>
          <div class="panel-body">
            <img class="img-responsive" src="/assets/images/scissors.png">
          </div>
        </div>
      </div>

      <div class="col-md-4 col-xs-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title text-center">
              <%= @computer_move %>
            </h2>
          </div>

          <% if @computer_move == "Rock" %>
          <div class="panel-body">
            <img class="img-responsive" src="/assets/images/rock.png">
          </div>
          <% elsif @computer_move == "Paper" %>
          <div class="panel-body">
            <img class="img-responsive" src="/assets/images/paper.png">
          </div>
          <% else %>
          <div class="panel-body">
            <img class="img-responsive" src="/assets/images/scissors.png">
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well text-center">
          <h1>
            <% if @computer_move == "Rock" %>
            <span class="label label-danger">
              You lost!
            </span>
            <% elsif @computer_move == "Paper" %>
            <span class="label label-success">
              You won!
            </span>
            <% else %>
            <span class="label label-warning">
              You tied!
            </span>
            <% end %>
          </h1>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
