<!DOCTYPE html>
<html>
<head>
  <title>RockPaperScissors</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- Connect to Bootstrap CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">

  <!-- Connect to Font Awesome CSS -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

  <!-- Connect to Bootstrap Javascript -->
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <!-- Connect to own Additional Styles -->
  <link rel="stylesheet" href="additional_styles.css">

</head>

<body>

  <div class="container">
    <hr>

    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-12">
        <div class="btn-group btn-group-justified">

          <a href="/play/rock" class="btn btn-block btn-primary">
            Play Rock
          </a>

          <a href="/play/paper" class="btn btn-block btn-info">
            Play Paper
          </a>

          <a href="/play/scissors" class="btn btn-block btn-primary">
            Play Scissors
          </a>
        </div>
      </div>
    </div>
    <hr>



<%= yield %>




</body>
</html>
